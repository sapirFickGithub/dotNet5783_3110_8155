<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="800">
    <Grid Name="MainGrid">
        <Grid.Background>
            <ImageBrush ImageSource="/1593678163641.jpeg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="116"/>
            <RowDefinition Height="74*"/>
            <RowDefinition Height="53*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="Admin" 
              Margin="289,145,306,93"
              RenderTransformOrigin="0.5,0.5"
              Background="#FFFEFEEC"
              Cursor="" Grid.Row="1">
            <Button Content="Admin"
                FontSize="36"
                Background="#FFFEFEEC"
                FontFamily= "Maiandra GD"
                Margin="0,1,0,-1" 
                FontWeight="Normal"
                Click="Admin_Click"
                HorizontalAlignment="Right" 
                Width="205"/>
            <Button Content="Client"
                FontSize="36"
                Background="#FFFEFEEC"
                FontFamily= "Maiandra GD"
                Margin="0,91,0,-91" 
                FontWeight="Normal"
                Click= "Client_Click"
                HorizontalAlignment="Center"
                Width="205"/>
            <TextBox x:Name="ID"  Background="#FFFEFEEC" HorizontalAlignment="Left" Margin="13,-251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136" Height="35"  FontSize="20"
                FontFamily="Maiandra GD"/>
            <Label Content="Enter ID of your order to track:" HorizontalAlignment="Left" Margin="-283,-251,0,0" VerticalAlignment="Top" Width="293"  Background="#FFFEFEEC" FontSize="20"
                FontFamily="Maiandra GD" Height="35"/>
            <Grid.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFC54F4F" Offset="1"/>
                </LinearGradientBrush>
            </Grid.OpacityMask>
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.228"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
        </Grid>
        <Button Content="OK" HorizontalAlignment="Left" Margin="442,11,0,0" VerticalAlignment="Top" Height="34" Width="24" Background="#FFFEFEEC" Click= "Tracking_Click" />

    </Grid>
</Window>
