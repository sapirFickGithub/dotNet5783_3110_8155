<Window x:Class="PL.SimulatorWindow"
         DataContext="{Binding RelativeSource={RelativeSource self}}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Simulator" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="338,347,0,0" VerticalAlignment="Top" Height="30" Width="100" Click="Stop_Click"/>
        
        <ProgressBar HorizontalAlignment="Left" Height="26" Margin="268,256,0,0" VerticalAlignment="Top" Width="230"/>
        
        <TextBlock Name="Timer" HorizontalAlignment="Left" Margin="561,159,0,0" TextWrapping="Wrap" Text="{Binding stopWatch.Elapsed }" VerticalAlignment="Top" Height="61" Width="162" FontSize="36"/>
       
        <Button Content="Close" HorizontalAlignment="Left" Margin="561,347,0,0" VerticalAlignment="Top" Height="30" Width="100" Click="Close_Click"/>
        
        <Button Content="Start" HorizontalAlignment="Left" Margin="106,347,0,0" VerticalAlignment="Top" Height="30" Width="100" Click="Start_Click"/>
        
        <TextBlock x:Name="orderStatus" HorizontalAlignment="Left" Margin="396,196,0,0" TextWrapping="Wrap" Text="orderStatus" VerticalAlignment="Top" Height="23" Width="84" TextAlignment="Center"/>
        
        <Label Content="Satus" HorizontalAlignment="Left" Margin="296,190,0,0" VerticalAlignment="Top" Height="23"  Width="73" FontSize="20" FontWeight="Bold"/>
        
        <Label Content="Order ID " HorizontalAlignment="Left" Margin="296,159,0,0" VerticalAlignment="Top" Height="24"  Width="73" FontSize="20" FontWeight="Bold"/>
        <TextBlock x:Name="orderID" HorizontalAlignment="Left" Margin="396,162,0,0" TextWrapping="Wrap" Text="orderID" VerticalAlignment="Top" Height="23" Width="84" TextAlignment="Center"/>
        
        <TextBlock x:Name="orderStatus_Copy" HorizontalAlignment="Left" Margin="402,228,0,0" TextWrapping="Wrap" Text="orderStatus" VerticalAlignment="Top" Height="23" Width="84" TextAlignment="Center"/>
        
        <Label Content="updated status" HorizontalAlignment="Left" Margin="274,222,0,0" VerticalAlignment="Top" Height="23"  Width="101" FontSize="20" FontWeight="Bold"/>
       
        <Label Content="Simulator:" HorizontalAlignment="Left" Margin="106,53,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Height="54" Width="225"/>


    </Grid>
</Window>
