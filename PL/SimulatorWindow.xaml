<Window x:Class="PL.SimulatorWindow"
         DataContext="{Binding RelativeSource={RelativeSource self}}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Simulator" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="338,347,0,0" VerticalAlignment="Top" Height="30" Width="100" Click="Stop_Click"/>

        <ProgressBar  Value="{Binding BarProgress}"  Maximum="{Binding maxBar}"
                      Background="#FFEDCCFB" Margin="274,262,320,138" />

        <TextBlock Name="Timer" HorizontalAlignment="Left" Margin="561,159,0,0" TextWrapping="Wrap" Text="{Binding timerText }" VerticalAlignment="Top" Height="61" Width="162" FontSize="36"/>

        <Button Content="Close" HorizontalAlignment="Left" Margin="561,347,0,0" VerticalAlignment="Top" Height="30" Width="100" Click="Close_Click"/>

        <Button Content="Start" HorizontalAlignment="Left" Margin="106,347,0,0" VerticalAlignment="Top" Height="30" Width="100" Click="Start_Click"/>

        <TextBlock x:Name="orderStatus" HorizontalAlignment="Left" Margin="396,194,0,0" TextWrapping="Wrap" Text="{Binding oldStatus}" VerticalAlignment="Top" Height="23" Width="84" TextAlignment="Center"/>

        <Label Content="Satus" HorizontalAlignment="Left" Margin="296,188,0,0" VerticalAlignment="Top" Height="23"  Width="73" FontSize="20" FontWeight="Bold"/>
        <Label Content="{Binding Time}" HorizontalAlignment="Left" Margin="56,278,0,0" VerticalAlignment="Top" Height="37"  Width="150" FontSize="20" FontWeight="Bold"/>

        <Label Content="Order ID " HorizontalAlignment="Left" Margin="296,151,0,0" VerticalAlignment="Top" Height="24"  Width="73" FontSize="20" FontWeight="Bold"/>

        <TextBlock x:Name="orderID" HorizontalAlignment="Left" Margin="396,154,0,0" TextWrapping="Wrap" Text="{Binding currentOrder.idOfOrder}" VerticalAlignment="Top" Height="23" Width="84" TextAlignment="Center"/>

        <TextBlock x:Name="orderStatus_Copy" HorizontalAlignment="Left" Margin="396,228,0,0" TextWrapping="Wrap" Text="{Binding currentOrder.Status}" VerticalAlignment="Top" Height="23" Width="84" TextAlignment="Center"/>

        <Label Content="updated status" HorizontalAlignment="Left" Margin="274,222,0,0" VerticalAlignment="Top" Height="23"  Width="101" FontSize="20" FontWeight="Bold"/>

        <Label Content="Simulator:" HorizontalAlignment="Left" Margin="106,53,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Height="54" Width="225"/>

        <Label x:Name="resultLabel"  HorizontalAlignment="Left" Margin="496,266,0,0" VerticalAlignment="Top" Height="30"  Width="72" FontSize="20" FontWeight="Bold"/>

        <Label 
                HorizontalAlignment="Right"
                VerticalAlignment="Center" 
                Grid.Row="2"
                Grid.Column="4"
                >
            <Label.Style>
                <Style TargetType="Label">
                    <Setter Property="Content" Value="Initials"/>
                    <Style.Triggers>
                        <DataTrigger
                                Binding="{Binding currentOrder.Status }"
                                Value="ORDERED">
                            <Setter Property="Content" Value="SHIPPED"/>
                        </DataTrigger>
                        <DataTrigger 
                                Binding="{Binding currentOrder.Status }"
                                Value="SHIPPED">
                            <Setter Property="Content" Value="DELIVERY"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>


    </Grid>
</Window>
