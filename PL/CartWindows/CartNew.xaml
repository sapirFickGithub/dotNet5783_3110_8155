<Window x:Class="PL.CartWindows.CartNew"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.CartWindows"
        mc:Ignorable="d"
        Title="CartNew" Height="450" Width="657">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="241*"/>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="102*"/>
        </Grid.RowDefinitions>

        <ComboBox x:Name="Category_selector"
                  HorizontalAlignment="Left"
                  Margin="437,0,0,0" 
                   FontFamily= "Maiandra GD"
                  VerticalAlignment="Center"
                  Width="181" Height="22"
                  SelectionChanged="Category_SelectionChanged">
        </ComboBox>

        <ListView x:Name="List_of_product"
                  d:ItemsSource="{d:SampleData ItemCount=6}" 
                  SelectionChanged="List_of_product_SelectionChanged"
                  Margin="0,40,0,5"
                  FontFamily="Maiandra GD" 
                  Grid.RowSpan="3"
                  
                  >
            <ListView.View>
                <GridView>

                    <GridViewColumn 
                            DisplayMemberBinding="{Binding Name}" >
                        <GridViewColumnHeader 
                            Content="Name" FontFamily= "Maiandra GD"
                            Click="Sort_By_Name_Click"/>
                    </GridViewColumn>

                    <GridViewColumn 
                            DisplayMemberBinding="{Binding idOfProduct}">
                        <GridViewColumnHeader 
                            Content="ID" FontFamily= "Maiandra GD"
                            Click="Sort_By_ID_Click"/>
                    </GridViewColumn>

                    <GridViewColumn  
                            DisplayMemberBinding="{Binding ProductCategory }" >
                        <GridViewColumnHeader 
                            Content="Category" FontFamily= "Maiandra GD"></GridViewColumnHeader>

                    </GridViewColumn>

                    <GridViewColumn 
                            DisplayMemberBinding="{Binding Amount}" >
                        <GridViewColumnHeader 
                            Content= "Amount" FontFamily= "Maiandra GD"/>
                    </GridViewColumn>

                    <GridViewColumn 
                            DisplayMemberBinding="{Binding InStock}" >
                        <GridViewColumnHeader 
                            Content= "In stock" FontFamily= "Maiandra GD"/>
                    </GridViewColumn>

                    <GridViewColumn 
                            DisplayMemberBinding="{Binding Price}" >
                        <GridViewColumnHeader 
                            Content= "Price" FontFamily= "Maiandra GD"
                            Click= "Sort_By_Price_Click"/>
                    </GridViewColumn>

                </GridView>


            </ListView.View>
        </ListView>
        <Button x:Name="Back_Botton"
                Content="Back"   
                HorizontalAlignment="Left"
                Margin="499,23,0,0" 
                Grid.Row="3"
                Background="#FFF1F1D8"
                VerticalAlignment="Top"
                Height="46" 
                Width="117" 
                FontSize="20"
                FontFamily="Maiandra GD"
                Click="BackToMainWindow_Click"/>
    </Grid>
</Window>
