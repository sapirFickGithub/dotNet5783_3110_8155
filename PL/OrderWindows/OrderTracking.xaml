<Window x:Class="PL.OrderWindows.OrderTracking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.OrderWindows"
        mc:Ignorable="d"
        Title="OrderTracking" Height="450" Width="400">
    <Grid>
        <Button x:Name="Back_Botton"
                Content="Back"   
                HorizontalAlignment="Left"
                Margin="10,386,0,0"  VerticalAlignment="Top" Height="38" Width="110" Click="BackToProductListWindow_Click"/>
        <TextBox x:Name="ID"  Background="#FFFEFEEC" HorizontalAlignment="Left" Margin="156,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136" Height="35"  FontSize="20"
                FontFamily="Maiandra GD"/>
        <Label Content="Enter ID of your order to track:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="293"  Background="#FFFEFEEC" FontSize="20"
                FontFamily="Maiandra GD" Height="35"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="312,52,0,0" VerticalAlignment="Top" Height="33" Width="44" Background="#FFFEFEEC" Click= "Tracking_Click" />

    </Grid>
</Window>
