<Window x:Class="PL.OrderWindows.Tracking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.OrderWindows"
         DataContext="{Binding RelativeSource={RelativeSource self}}"
        mc:Ignorable="d"
        Title="Tracking" Height="300" Width="400">
    <Grid Margin="0,0,0,0">

        <Label Content="Enter ID of your order to track:" 
               HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="293"
               FontFamily="Maiandra GD" Height="35"/>
        <TextBlock HorizontalAlignment="Left" FontSize="15" Margin="200,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="130" Width="129"
                  Text="{Binding orderTrack}" />
        <Button x:Name="Back_Botton"
                Content="Back"   
                HorizontalAlignment="Left"
                Margin="10,372,0,0"  VerticalAlignment="Top" Height="38" Width="110" Click="BackToMain_Click"/>
    </Grid>
</Window>
