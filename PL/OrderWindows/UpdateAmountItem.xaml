<UserControl x:Class="PL.UpdateAmountItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              DataContext="{Binding RelativeSource={RelativeSource Self}}"

    xmlns:local="clr-namespace:PL"
             mc:Ignorable="d" Height="290" Width="524">
    <Grid>
        <Button Content="OK" HorizontalAlignment="Left" Margin="410,211,0,0" VerticalAlignment="Top" Height="40" Width="48"/>
        <TextBox HorizontalAlignment="Left" Margin="109,107,0,0" TextWrapping="Wrap" Text="{Binding amount}" VerticalAlignment="Top" Width="173" Height="38" FontSize="22" TextChanged="TextBox_TextChanged"/>
        <Label Content="Enter the new amount:  " HorizontalAlignment="Left" Margin="41,33,0,0" VerticalAlignment="Top" Background="#FFFFFFEA"/>

    </Grid>
</UserControl>
