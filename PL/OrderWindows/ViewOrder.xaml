<Window x:Class="PL.OrderWindows.ViewOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.OrderWindows"
        mc:Ignorable="d"
         DataContext="{Binding RelativeSource={RelativeSource self}}"  
        Title="Update order" Height="450" Width="800">

    <Grid>
        <TextBlock HorizontalAlignment="Left"
                 Margin="236,162,0,0" 
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="234"
                 Text="{Binding orderForList.CustomerName}" 
                 Height="25" 
                 />
        <Button Content="Back" HorizontalAlignment="Left" Margin="38,357,0,0" VerticalAlignment="Top" Width="117"
                Click="BackToOrderListWindow_Click" Height="42"/>
        <Button x:Name="update_order"
                Content="Update"
                HorizontalAlignment="Left"
                Margin="547,352,0,0" 
                VerticalAlignment="Top" 
                Width="179" Height="47"
                Click="UpdateOrder_click"                
                />
        <Label Content="Customer name:" HorizontalAlignment="Left" Margin="82,155,0,0" VerticalAlignment="Top" Width="154"/>
        <Label Content="ID of order:" HorizontalAlignment="Left" Margin="120,113,0,0" VerticalAlignment="Top" Width="116"/>
        <Label Content="Status:" HorizontalAlignment="Left" Margin="160,76,0,0" VerticalAlignment="Top" Width="76"/>
        <Label Content="Amount:" HorizontalAlignment="Left" Margin="152,235,0,0" VerticalAlignment="Top" Width="92"/>
        <Label Content="Total price:" HorizontalAlignment="Left" Margin="547,222,0,0" VerticalAlignment="Top" Width="105"/>
        <Label Content="Date Of delivery:" HorizontalAlignment="Left" Margin="82,195,0,0" VerticalAlignment="Top" Width="169" RenderTransformOrigin="-0.375,-2.649"/>
        <TextBlock HorizontalAlignment="Left"
            Margin="236,123,0,0" 
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="203"
            Text="{Binding orderForList.idOfOrder}" 
            Height="25" 
                 />
        <TextBlock HorizontalAlignment="Left"
            Margin="244,240,0,0" 
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="234"
            Text="{Binding orderForList.AmountOfItem}" 
            Height="25"
                 />
        <ComboBox x:Name="Status_selector"
                  HorizontalAlignment="Left"
                  Margin="236,70,0,0" Width="114" Height="38"
                  VerticalAlignment="Top" SelectionChanged="Category_SelectionChanged"
                  ItemsSource="{Binding status}"
                  SelectedItem="{Binding orderForList.Status}">
        </ComboBox>

       
        <TextBlock HorizontalAlignment="Left"
            Margin="662,225,0,0"  Width="88"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
           FontSize="20"
            Text="{Binding orderForList.TotalPrice}" 
            Height="37" 
                 />
