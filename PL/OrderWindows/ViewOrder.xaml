<Window x:Class="PL.OrderWindows.ViewOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.OrderWindows"
        mc:Ignorable="d"
         DataContext="{Binding RelativeSource={RelativeSource self}}"  
        Title="Update order" Height="450" Width="800">

    <Grid Margin="-1,0,1,0">

        <Button Content="Back" HorizontalAlignment="Left" Margin="38,357,0,0" VerticalAlignment="Top" Width="117"
                Click="BackToOrderListWindow_Click" Height="42"/>

        <Label Content="Customer Name:" HorizontalAlignment="Left" Margin="88,83,0,0" VerticalAlignment="Top" Width="84" RenderTransformOrigin="0.74,0.422"/>
        <Label Content="Order ID:" HorizontalAlignment="Left" Margin="120,57,0,0" VerticalAlignment="Top" Width="68" Height="23"/>
        <Label Content="Status:" HorizontalAlignment="Left" Margin="356,59,0,0" VerticalAlignment="Top" Width="76"/>
        <Label Content="Total price:" HorizontalAlignment="Left" Margin="542,355,0,0" VerticalAlignment="Top" Width="105"/>
        <Label Content="Order Date:" HorizontalAlignment="Left" Margin="336,85,0,0" VerticalAlignment="Top" Width="68" RenderTransformOrigin="-0.375,-2.649" Height =" 23"/>
        <Label Content="Customer Email:" HorizontalAlignment="Left" Margin="91,107,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="-0.375,-2.649" Height =" 23"/>
        <Label Content="Customer Address:" HorizontalAlignment="Left" Margin="82,132,0,0" VerticalAlignment="Top" Width="94" RenderTransformOrigin="-0.375,-2.649" Height =" 23"/>
        <TextBlock HorizontalAlignment="Left"
            Margin="170,62,0,0" 
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="100"
            Text="{Binding orderForList.idOfOrder}" 
            Height="23" 
                 />

        <!--<ComboBox x:Name="Status_selector"
                  HorizontalAlignment="Left"
                  Margin="236,70,0,0" Width="114" Height="38"
                  VerticalAlignment="Top" SelectionChanged="Category_SelectionChanged"
                  ItemsSource="{Binding status}"
                  SelectedItem="{Binding orderForList.Status}">
        </ComboBox>-->


        <TextBlock HorizontalAlignment="Left"
            Margin="624,355,0,0"  Width="88"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
           FontSize="10"
            Text="{Binding order.TotalPrice}" 
            Height="37" 
                 />
        <TextBlock HorizontalAlignment="Left"
            Margin="177,87,0,0" 
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="100"
            Text="{Binding orderForList.CustomerName}" 
            Height="23" 
                 />
        <Label Content="Ship Date:" HorizontalAlignment="Left" Margin="344,111,0,0" VerticalAlignment="Top" Width="62" RenderTransformOrigin="-0.375,-2.649" Height =" 23"/>
        <Label Content="Delivery Date:" HorizontalAlignment="Left" Margin="328,136,0,0" VerticalAlignment="Top" Width="74" RenderTransformOrigin="-0.375,-2.649" Height =" 23"/>
        <TextBlock HorizontalAlignment="Left"
            Margin="177,111,0,0" 
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="100"
            Text="{Binding order.CustomerMail}" 
            Height="23" 
                 />
        <TextBlock HorizontalAlignment="Left"
            Margin="177,136,0,0" 
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="100"
            Text="{Binding order.CustomerAddress}" 
            Height="23" 
                 />
        <Label Content="Amount Of Item:" HorizontalAlignment="Left" Margin="91,157,0,0" VerticalAlignment="Top" Width="94" RenderTransformOrigin="-0.375,-2.649" Height =" 23"/>
        <TextBlock HorizontalAlignment="Left"
            Margin="177,161,0,0" 
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="100"
            Text="{Binding orderForList.AmountOfItem}" 
            Height="23" 
                 />
        <TextBlock HorizontalAlignment="Left"
            Margin="404,62,0,0" 
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="100"
            Text="{Binding order.Status}" 
            Height="23" 
                 />
        <TextBlock HorizontalAlignment="Left"
            Margin="401,87,0,0" 
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="100"
            Text="{Binding order.DateOfOrder}" 
            Height="23" 
                 />
        <TextBlock HorizontalAlignment="Left"
            Margin="402,113,0,0" 
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="100"
            Text="{Binding order.DateOfShipping}" 
            Height="23" 
                 />
        <TextBlock HorizontalAlignment="Left"
            Margin="401,141,0,0" 
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="100"
            Text="{Binding order.DateOfDelivery}" 
            Height="23" 
                 />
        <Button Content="update"
                HorizontalAlignment="Left"
                Margin="526,117,0,0" 
                VerticalAlignment="Top"
                Click="update_ShipDate_Click"
                />
        <Button Content="update"
                HorizontalAlignment="Left"
                Margin="526,142,0,0" 
                VerticalAlignment="Top"
                Click ="update_DeliveryDate_Click"
                />

        <ListView 
                  d:ItemsSource="{d:SampleData ItemCount=5}" 
                  SelectionChanged="List_of_orders_SelectionChanged"
                  Margin="152,202,132,104"
                  FontFamily="Maiandra GD"
                  ItemsSource="{Binding order.Items}"
                  MouseDoubleClick="List_of_orders_MouseDoubleClick">
            <ListView.View>
                <GridView>

                    <GridViewColumn 
                            DisplayMemberBinding="{Binding idOfProduct}">
                        <GridViewColumnHeader 
                            Content="Product ID" FontFamily= "Maiandra GD" Tag="idOfOrder"
                            Click="Sort_By_Colmun_Click"/>
                    </GridViewColumn>

                    <GridViewColumn 
                            DisplayMemberBinding="{Binding NameOfProduct}" >
                        <GridViewColumnHeader 
                            Content="Product Name" FontFamily= "Maiandra GD" Tag="CustomerName"
                            Click="Sort_By_Colmun_Click"/>
                    </GridViewColumn>


                    <GridViewColumn  
                            DisplayMemberBinding="{Binding PriceOfProduct }" >
                        <GridViewColumnHeader 
                            Content="Product Price" FontFamily= "Maiandra GD" Tag="Status"
                            Click="Sort_By_Colmun_Click"/>
                    </GridViewColumn>

                    <GridViewColumn  
                            DisplayMemberBinding="{Binding amount }" >
                        <GridViewColumnHeader 
                            Content="Amount" FontFamily= "Maiandra GD" Tag="AmountOfItem"
                             Click="Sort_By_Colmun_Click"/>
                    </GridViewColumn>

                    <GridViewColumn 
                            DisplayMemberBinding="{Binding totalPrice}" >
                        <GridViewColumnHeader 
                            Content= "Total price" FontFamily= "Maiandra GD" Tag="TotalPrice"
                             Click="Sort_By_Colmun_Click"/>
                    </GridViewColumn>

                    <GridViewColumn 
                            DisplayMemberBinding="{Binding ProductCategory}" >
                        <GridViewColumnHeader 
                            Content= "Category" FontFamily= "Maiandra GD" Tag="TotalPrice"
                             Click="Sort_By_Colmun_Click"/>
                    </GridViewColumn>
                    
                     <GridViewColumn>
                        <GridViewColumnHeader
                                Content="Amount" 
                                AllowDrop="True" 
                                Focusable="True" 
                                Tag="amount" 
                              />
                        <GridViewColumn.CellTemplate >
                            <DataTemplate >
                                <StackPanel Orientation="Horizontal">

                                    <Button
                                            x:Name="Decrease"
                                            
                                            Width="20"
                                            Height="20"
                                            Padding="0"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center" 
                                            FontSize="14" 
                                            
                                            Click="Decrease_Click" 
                                            
                                            Content="-" 
                                            
                                            Tag="{Binding idOfProduct}"
                                            
                                            />

                                    <Label Content="{Binding amount}" />


                                    <Button 
                                            x:Name="Increase"
                                            Width="20"  Height="20" Padding="0"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            
                                            Click="Increase_Click"
                                            
                                            Content="+" 
                                            
                                            FontSize="14" 
                                            
                                            Tag="{Binding idOfProduct}" />

                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>


            </ListView.View>
        </ListView>
