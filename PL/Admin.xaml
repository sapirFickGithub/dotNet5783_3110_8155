<Window x:Class="PL.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Admin" Height="404" Width="406"  Icon="/iconCar.jpg">
    <Grid Margin="0,0,0,-6">

        <Button Content="Product"
                Margin="0,99,0,233"  FontSize="36"
                Click="ProductListWindow_Click"
                Width="124" HorizontalAlignment="Center"/>
        <Button Content="Order"
                Margin="0,197,0,135"
                Click="OrderListWindow_Click"
                Width="125" HorizontalAlignment="Center"/>

        <Label HorizontalAlignment="Left"
                 Margin="24,35,0,0"
                 Content="Admin options:"
                 VerticalAlignment="Top"
                 Width="348" Height="59" Background="{x:Null}" FontSize="22"/>
    </Grid>
</Window>
