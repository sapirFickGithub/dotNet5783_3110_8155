<Window x:Class="PL.ProductWindows.AddProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.ProductWindows"
        mc:Ignorable="d"
        Title="AddProduct" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.507,0.477">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="102*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="128*"/>
        </Grid.RowDefinitions>

        <TextBox 
            x:Name="ID"
            HorizontalAlignment="Left"
            Height="30"
            Width="250"
            Margin="250,0,0,0" 
            Grid.Row="1"
            TextWrapping="Wrap" 
            VerticalAlignment="Center" TextChanged="InStock_TextChanged"
            />
        <Label Content="ID:" HorizontalAlignment="Left" Margin="207,0,0,0" Grid.Row="1" VerticalAlignment="Center"/>

        <TextBox 
            x:Name="Name"
            HorizontalAlignment="Left" 
            Height="30"
            Width="250"
            Margin="250,0,0,0" 
            Grid.Row="2"
            TextWrapping="Wrap" 
           VerticalAlignment="Center"
           />

        <Label Content="Name:" HorizontalAlignment="Left" Margin="184,0,0,0" Grid.Row="2" VerticalAlignment="Center"/>

        <TextBox 
            x:Name="Price"
            HorizontalAlignment="Left" 
            Height="30"
            Margin="250,0,0,0" 
            Width="250"
            Grid.Row="3"
            TextWrapping="Wrap" 
            VerticalAlignment="Center"
            />
        <Label Content="Price:" HorizontalAlignment="Left" Margin="196,5,0,0" Grid.Row="3" VerticalAlignment="Top"/>
       
        <TextBox 
            x:Name="InStock"
            HorizontalAlignment="Left" 
            Height="30"
            Width="250"
            Margin="250,0,0,0" 
            Grid.Row="4"
            TextWrapping="Wrap" 
            VerticalAlignment="Center"
            TextChanged="Price_TextChanged"
            />
        <Label Content="In stock:" HorizontalAlignment="Left" Margin="178,3,0,0" Grid.Row="4" VerticalAlignment="Top"/>
       
        <ComboBox 
                  x:Name="Category_selector"
                  HorizontalAlignment="Left" 
                  Margin="250,5,0,0" 
                  Grid.Row="5" 
                  VerticalAlignment="Top" 
                  Width="250" 
                  Height="30"
                  SelectionChanged="Category_selector_SelectionChanged"/>
        <Label Content="Category:" HorizontalAlignment="Left" Margin="165,0,0,10" Grid.Row="5" VerticalAlignment="Bottom" Height="30" Width="84" FontFamily="Jokerman" FontSize="14"/>
        <Button Content="Add"
                HorizontalAlignment="Left"
                Margin="325,39,0,0" 
                Grid.Row="6" 
                VerticalAlignment="Top" 
                Width="91" 
                Height="37" 
                FontSize="16"
                Click="AddProduc_Click"
               
                />
    </Grid>
</Window>
