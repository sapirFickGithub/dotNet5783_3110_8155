                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Expander IsExpanded="True">
                                            <Expander.Header>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Name}" Foreground="{DynamicResource PrimaryHuMidBrush}" VerticalAlignment="Bottom"/>
                                                    <TextBlock Text="{Binding Items}" Foreground="{DynamicResource PrimaryHuLirhtBrush}"  VerticalAlignment="Bottom"/>
                                                    <TextBlock Text="item(s)" Foreground="{DynamicResource PrimaryHuLirhtBrush}"  VerticalAlignment="Bottom"/>
                                                </StackPanel>
                                            </Expander.Header>
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ListView.GroupStyle>-->

        </ListView>

        <Button x:Name="Back_Botton" Content="Back"   
                HorizontalAlignment="Left" Grid.Row="3"
                Margin="639,9,0,0" Height="46"  Width="117"   
                VerticalAlignment="Top"   Click="BackToMainWindow_Click"/>

        <Button x:Name="Go_to_Cart" Content="Go to cart"   
            HorizontalAlignment="Left" Grid.Row="3"
            Margin="40,9,0,0" Height="46"  Width="117"   
            VerticalAlignment="Top"   Click="Go_to_Cart_Click"/>
        <!--<CheckBox Content="See in groups" HorizontalAlignment="Left" Margin="40,52,0,151" Unchecked="GroupingCheak_UnChecked" Checked="GroupingCheak_Checked" Grid.RowSpan="2" Width="92"/>-->


    </Grid>
</Window>
